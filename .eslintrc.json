{
    "env": {
        "browser": true,
        "es6": true
    },
	"globals": {
		"ENV": true
	},
    "extends": ["prettier", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "no-console": "warn",
        "comma-dangle": [0, 2],
        "quotes": [
            "error",
            "single"
        ]
    },
    "plugins": [
        "prettier",
		"html"
    ]
}
