{
  "scripts": {
    "build": "rollup -c --environment production",
    "dev": "serve public & rollup -c -w",
    "start": "serve public",
    "lint": "eslint --ext .html,.js src/",
    "lint:cached": "eslint --cache --ext .html,.js src/",
    "test": "npm-run-all -p lint:cached -p test:ava",
    "test:ava": "ava tests/*.js",
    "tdd": "ava -w tests/*.js"
  },
  "files": [
    "index.html",
    "dist"
  ],
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "buble": "^0.15.2",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-standard": "^3.0.1",
    "jsdom": "9.11.0",
    "npm-run-all": "^4.1.1",
    "reify": "^0.12.0",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "serve": "^6.0.3",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.4"
  },
  "name": "waves.fet.li",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "src/main.js",
  "svelte.root": "src/components",
  "repository": "git@github.com:Hexagon6/wave.git",
  "author": "Tobi Turing <dev@fet.li>",
  "license": "MIT",
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "source": [
      "src"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 2 versions",
            "node": "current"
          }
        }
      ],
      "@ava/stage-4"
    ]
  }
}
