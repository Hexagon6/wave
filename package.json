{
  "scripts": {
    "build": "rollup -c --environment production",
    "build:watch": "rollup -c -w",
    "dev": "run-p --aggregate-output start build:watch tdd",
    "lint": "eslint --ext .html,.js,.json src/ tests/ *.json",
    "lint:cached": "npm run lint -- --cache",
    "format": "prettier-eslint src/**/*.js",
    "start": "serve public",
    "test": "npm-run-all -p lint:cached -p test:ava",
    "test:ava": "ava tests/*.js",
    "tdd": "ava -w tests/*.js"
  },
  "files": [
    "index.html",
    "dist"
  ],
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "buble": "^0.19.3",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-promise": "^3.6.0",
    "jsdom": "9.11.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.0",
    "reify": "^0.12.0",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^4.1.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "serve": "^6.0.3"
  },
  "dependencies": {
    "lodash-es": "^4.17.4",
    "svelte": "^2.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "name": "waves.fet.li",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "src/main.js",
  "svelte.root": "src/components",
  "repository": "git@github.com:Hexagon6/wave.git",
  "author": "Tobi Turing <dev@fet.li>",
  "license": "MIT",
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "source": [
      "src"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 2 versions",
            "node": "current"
          }
        }
      ],
      "@ava/stage-4"
    ]
  }
}
